<%- include("partials/header1"); -%>
<link rel="stylesheet" href="/css/loan.css">
<div class="">
  <form>

    <fieldset>
      <label for="firstName">Applicant Name</label>
      <input type="text" name="name" id="firstName">
    </fieldset>
    <fieldset>
      <legend>Title</legend>
      <input type="radio" id="radio1" name="radios" checked>
      <label for="radio1">Mr.</label><br>
      <input type="radio" id="radio2" name="radios">
      <label for="radio2">Ms.</label><br>
      <input type="radio" id="radio3" name="radios">
      <label for="radio3">Mrs.</label>
    </fieldset>

    <fieldset>
      <label for="textarea">Bio</label>
      <textarea name="textarea" id="textarea" placeholder="Tell us about yourself..."></textarea>
    </fieldset>

    <fieldset>
      <legend>Purpose of loan</legend>
      <input type="radio" id="radio1" name="radios" checked>
      <label for="radio1">Employed</label><br>
      <input type="radio" id="radio2" name="radios">
      <label for="radio2">Self Employed</label><br>
      <input type="radio" id="radio3" name="radios">
      <label for="radio3">Retired</label>
      <input type="radio" id="radio4" name="radios">
      <label for="radio4">Housewife</label>
      <input type="radio" id="radio5" name="radios">
      <label for="radio5">Student</label>
    </fieldset>

    <fieldset>
      <legend>Purpose of loan</legend>
      <input type="radio" id="radio1" name="radios" checked>
      <label for="radio1">House renovation</label><br>
      <input type="radio" id="radio2" name="radios">
      <label for="radio2">Marriage</label><br>
      <input type="radio" id="radio3" name="radios">
      <label for="radio3">Travel</label>
      <input type="radio" id="radio4" name="radios">
      <label for="radio4">Education</label>
      <input type="radio" id="radio5" name="radios">
      <label for="radio5">Business expansion</label>
    </fieldset>

