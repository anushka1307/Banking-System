    <fieldset>
      <legend>Bank Details</legend>
      <label for="monthSalary">Monthly Salary</label>
      <input type="text" name="monthSalary" value="" placeholder="">
      <label for="accNumber">Account Number</label>
      <input type="text" name="accNumber" value="" placeholder="In months">
      <label for="bankName">Bank Name</label>
      <input type="text" name="bankName" value="" placeholder="In months">
    </fieldset>

    <fieldset>
      <legend>Loan Details</legend>
      <label for="loanAmount">Amount</label>
      <input type="text" name="loanAmount" value="" placeholder="">
      <label for="loanTenure">Loan Tenure</label>
      <input type="text" name="loanTenure" value="" placeholder="In months">
    </fieldset>

    <button>Submit</button>
  </form>
</div>




